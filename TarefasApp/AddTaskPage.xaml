<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.AddTaskPage"
             Title="Adicionar Tarefa"
             BackgroundColor="Transparent">

    <StackLayout Padding="20">
        <Label Text="Tarefa:" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry x:Name="txtTitle" TextColor="White"  WidthRequest="500"/>

        <Label Text="Descrição:" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry x:Name="txtDescription" TextColor="White"  WidthRequest="500"/>

        <Label Text="Prioridade" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry x:Name="txtPriority" Keyboard="Numeric" TextColor="White"  WidthRequest="500"/>

        <Button Text="Salvar" Clicked="OnSaveClicked" BackgroundColor="Blue" TextColor="White" WidthRequest="100"/>
    </StackLayout>

</ContentPage>
